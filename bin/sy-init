#!/usr/bin/env node

const chalk = require('chalk');
const program = require('commander');
const { prompt} = require('enquirer');
const { clone, getChoices, checkChoices } = require('../src/util');

program.parse(process.argv);

process.on('unhandledRejection', (err) => {
  console.log(err)
  console.log(chalk.green(`
Goodbye!
`));
});

const __checkProjectName__ = (projectName)=>{
  if (!projectName) {
    console.log(chalk.red(`The project name is required
`));
    return process.exit(-1);
  }

  if(!/^\w{2,30}$/.test(projectName)){
    console.log(chalk.red(`
    The project name is invalid.
    Character ã€number and underscore are supported only and the length of name is between 2 and 30!
`));
    return process.exit(-1);
  }
}

const main = async ()=>{
  checkChoices();
  const choices = getChoices();
  
  const { name, git } = await prompt([
    {
      type: 'input',
      name: 'name',
      message: 'Enter a project name'
    },
    {
      type:'select',
      name: 'git',
      message: 'Select a type',
      choices: choices,
    }
  ]);
  __checkProjectName__(name);
  clone(name, git)
}

main();